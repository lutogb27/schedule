<<h3>ユーザー情報一覧</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>
 
 <table>
   <thead>
     <tr>
       <th>id</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>スケジュール更新日</th>
       <th>確認</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>
 
  <tbody>
    <% if @post.count > 0 %>
      <% @post.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start_at.to_s(:datetime_jp) %></td>
          <td><%= post.end_at.to_s(:datetime_jp) %></td>
          <td>
            <% if post.is_all_day == true %>
            <%= "○" %>
            <% end %>
          </td>
          <td><%= post.updated_at.to_s(:datetime_jp_detail) %></td>
          <td>
            <%= link_to "確認", post %>
          </td>
          <td>
            <%= link_to "編集", [:edit, post] %>
          </td>
          <td>
            <%= link_to "削除", post, method: :delete %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <td colspan="9">現在登録しているスケジュールはありません</td>
    <% end %>
  </tbody>
 </table>
 
 <p><%= link_to "ユーザー新規登録", :new_post %></p>